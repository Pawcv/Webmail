
<div class="list-group">
    @foreach (var folder in Model.Folders)
    {
        <form asp-action="ChangeActiveFolder" method="get" id="changeActiveFolder">
            <input name="folderName" type="hidden" value=@System.Net.WebUtility.UrlEncode(@folder.FullName)>
            <div class="form-group">
                <button type="submit" class="btn btn-default btn-block" ondrop="headerOnDrop(event)" ondragover="headerDragOver(event)">@folder.FullName</button>
            </div>
        </form>
    }
</div>
